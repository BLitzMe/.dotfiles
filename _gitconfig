[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

#Highlight whitespace in diffs

[color]
    ui = true
[color "diff"]
    whitespace = red reverse
[core]
    editor = vim  #$EDITOR


[alias]
    st = status
    ci = commit
    am = commit --amend
    br = branch
    co = checkout
    df = diff
    di = diff --cached
    lg = log -p

    lol-medium = log --graph --decorate --pretty=medium --abbrev-commit
    lola-medium = log --graph --decorate --pretty=medium --abbrev-commit --date-order --all

    lol = log --graph --format='"%Cgreen%h %d%Creset %s %Cred[%an, %ar]%Creset"'
    lol2 = log --graph --format='"%h %d %s [%an, %ar]"'
    lola = log --graph --format='"%Cgreen%h %d%Creset %s [%Cred%an, %ad(%ar)%Creset]"' --date-order --all --date=short
    lola2 = log --graph --format='"%Cgreen%h %d%Creset %s [%Cred%an, %ad%Cblue <- %cn, %cd%Creset]"' --date-order --all
    lolm = log --graph --format='%h %d %s [%an, %ai]' --date-order --all

    ls = ls-files

    df-st = diff --stat

[user]

[push]
